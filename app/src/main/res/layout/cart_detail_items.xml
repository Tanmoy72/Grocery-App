<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ImageView
    android:id="@+id/cartDetailImg"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/icons_basket"
    android:scaleType="fitXY"
    android:layout_marginLeft="20dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/cartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bundile Pack"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toRightOf="@id/cartDetailImg"/>
    <ImageView
        android:id="@+id/minusImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/minus"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:padding="5dp"
        android:background="@drawable/square_shape_bg"
        app:layout_constraintTop_toBottomOf="@id/cartText"
        app:layout_constraintLeft_toRightOf="@id/cartDetailImg"
        />
    <TextView
        android:id="@+id/itemCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="0"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/cartText"
        app:layout_constraintLeft_toRightOf="@id/minusImageView"
        />
    <ImageView
        android:id="@+id/addImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/add"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/square_shape_bg"
        app:layout_constraintTop_toBottomOf="@id/cartText"
        app:layout_constraintLeft_toRightOf="@id/itemCountTextView"/>

    <ImageView
        android:id="@+id/deleteItems"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/delete"
        android:layout_marginTop="8dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.100"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/deleteItems"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>