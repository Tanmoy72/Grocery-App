<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.OrderSuccessFragment">
<ImageView
    android:id="@+id/cartImg"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:src="@drawable/order_failed"

    android:padding="40dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="100dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/orderPlacedSuccessfullyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sorry,Order has Failed"

        android:textSize="18sp"
       android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cartImg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="#808080"
        android:layout_marginTop="20dp"
        android:text="Sorry, somethings went wrong. \nPlease try again continue your order."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orderPlacedSuccessfullyTxt"
        />

    <TextView
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_marginBottom="150dp"
        android:textColor="@color/white"
        android:text="Try Again"
        android:background="@drawable/edittext_bk"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Track Order"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@color/green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/continueBtn"/>


</androidx.constraintlayout.widget.ConstraintLayout>